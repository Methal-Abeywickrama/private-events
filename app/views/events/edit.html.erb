<%= form_with(model: @event, local: true) do |f| %>
  <%= f.label :name, "Name of the event" %>
  <%= f.text_field :name %>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :private, "Make this private?" %>
  <%= f.check_box :private %>
  <%= f.submit "Submit" %>
<% end %>
